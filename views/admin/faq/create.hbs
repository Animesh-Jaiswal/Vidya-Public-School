{{>header}}
{{>navbar}}

{{>breadcrum}}

<section id="admin" class="section-padding">
    <div class="container-fluid my-3">
        <div class="row mx-3">
            <div class="col-md-3 mb-3">
                {{>sidebar}}
            </div>
            <div class="col-md-9 mb-3">
                <h5 class="text-center p-2 bg-primary">Faq <a href="/admin/faq"><i
                            class="bi bi-arrow-left float-end text-light"></i></a></h5>
                <form action="/admin/faq/store" method="post">
                    <div class="row">
                        <div class="col-md-9 mb-3">
                            <label>Question*</label>
                            <input type="text" name="question" placeholder="question" value="{{data.question}}"
                                class="form-control {{#if errorMessage.question}}border-danger{{/if}}">
                            {{#if errorMessage.question}}
                            <p class="text-danger">{{errorMessage.question}}</p>
                            {{/if}}
                        </div>

                        <div class="col-12 mb-3">
                            <label>Answer*</label>
                            <textarea name="answer" rows="4" placeholder="Answer"
                                class="form-control {{#if errorMessage.answer}}border-danger{{/if}}">{{data.answer}}</textarea>
                            {{#if errorMessage.answer}}
                            <p class="text-danger">{{errorMessage.answer}}</p>
                            {{/if}}
                        </div>

                        <div class="col-md-6 mb-3">
                            <lable>Sort Order*</lable>
                            <input type="number" name="sortOrder" class="form-control"
                                value="{{#if data.sortOrder}}{{data.sortOrder}}{{else}}10{{/if}}">

                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Active*</label>
                            <select class="form-control" name="active">
                                <option value="1" {{isActiveFormHelper data.active "1" }}>Yes</option>
                                <option value="0" {{isActiveFormHelper data.active "0" }}>No</option>

                            </select>
                        </div>
                        <div class="col-12 mb-3">
                            <button type="submit" class="btn btn-primary w-100">Create</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>

    </div>
</section>
{{>footer}}